<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="middle">

            <android.support.v7.widget.Toolbar
                android:background="@mipmap/mine_frg_head_background"
                style="@style/TopBar"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ac_my_rl_my_infor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="40dp">

                    <com.taoxue.ui.view.CircleImageView
                        android:id="@+id/ac_my_iv_head"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:layout_marginLeft="@dimen/default_margin_large"
                        android:layout_marginRight="@dimen/default_margin_large"
                        android:src="@mipmap/icon_test_head"
                        app:border_color="@color/white"
                        app:border_width="2px" />

                    <TextView
                        android:id="@+id/ac_my_tv_name"
                        style="@style/TextView_14_wrap"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="1dp"
                        android:layout_toEndOf="@+id/ac_my_iv_head"
                        android:layout_toRightOf="@+id/ac_my_iv_head"
                        android:text="江小月"
                        android:textColor="@color/white" />

                </LinearLayout>
            </android.support.v7.widget.Toolbar>

            <RelativeLayout
                android:id="@+id/ac_my_rl_history_record"
                style="@style/setting_layout_padding"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/ac_my_textView12"
                    android:layout_width="@dimen/default_icon_height"
                    android:layout_height="@dimen/default_icon_height"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/default_margin_large"
                    android:layout_marginRight="@dimen/default_margin_large"
                    android:src="@mipmap/myinfor_time" />

                <RelativeLayout
                    android:id="@+id/ac_my_textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/ac_my_textView13"
                    android:layout_toRightOf="@+id/ac_my_textView12">


                    <TextView
                        android:id="@+id/ac_my_tv_history_recorad"
                        style="@style/TextView_14_wrap"
                        android:textColor="@color/text_gray"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="历史记录" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/ac_my_textView13"
                    style="@style/home_icon_entry"
                    android:layout_marginLeft="@dimen/default_margin_large"
                    android:layout_marginRight="@dimen/default_margin" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ac_my_rl_my_collection"
                style="@style/setting_layout_padding">

                <ImageView
                    android:id="@+id/ac_my_textView312"
                    android:layout_width="@dimen/default_icon_height"
                    android:layout_height="@dimen/default_icon_height"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/default_margin_large"
                    android:layout_marginRight="@dimen/default_margin_large"
                    android:src="@mipmap/myinfor_good" />

                <RelativeLayout
                    android:id="@+id/ac_my_textView314"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/ac_my_textView313"
                    android:layout_toRightOf="@+id/ac_my_textView312">


                    <TextView
                        android:textColor="@color/text_gray"
                        android:id="@+id/ac_my_tv_my_collection"
                        style="@style/TextView_14_wrap"
                        android:layout_alignParentTop="true"
                        android:text="我的收藏" />

                    <!--       <TextView
                               android:id="@+id/ac_my_tv_collection_type"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_alignParentLeft="true"
                               android:layout_alignParentStart="true"
                               android:layout_below="@+id/ac_my_tv_my_collection"
                               android:text="精选绘本" />-->


                </RelativeLayout>

                <ImageView
                    android:id="@+id/ac_my_textView313"
                    style="@style/home_icon_entry"
                    android:layout_marginRight="@dimen/default_margin" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/ac_my_rl_comment"
                style="@style/setting_layout_padding"
               >

                <ImageView
                    android:id="@+id/ac_my_textView4312"
                    android:layout_width="@dimen/default_icon_height"
                    android:layout_height="@dimen/default_icon_height"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/default_margin_large"
                    android:layout_marginRight="@dimen/default_margin_large"
                    android:src="@mipmap/myinfor_download" />

                <ImageView
                    android:id="@+id/ac_my_textView4313"
                    style="@style/home_icon_entry"
                    android:layout_marginLeft="@dimen/default_margin_large"
                    android:layout_marginRight="@dimen/default_margin" />

                <RelativeLayout
                    android:id="@+id/ac_my_textView4314"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/ac_my_textView4312"
                    android:layout_toRightOf="@+id/ac_my_textView4312">


                    <TextView
                        android:textColor="@color/text_gray"
                        android:id="@+id/ac_my_tv_comment"
                        style="@style/TextView_14_wrap"
                        android:layout_alignParentTop="true"
                        android:text="关注的资源商" />

                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginBottom="8dp"
                android:id="@+id/ac_my_rl_my_lib"
                style="@style/setting_layout_padding">

                <ImageView
                    android:id="@+id/ac_my_libtxt"
                    android:layout_width="@dimen/default_icon_height"
                    android:layout_height="@dimen/default_icon_height"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/default_margin_large"
                    android:layout_marginRight="@dimen/default_margin_large"
                    android:src="@mipmap/myinfor_lib" />

                <RelativeLayout
                    android:id="@+id/ac_my_liblay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ac_my_libtxt">


                    <TextView
                        android:textColor="@color/text_gray"
                        style="@style/TextView_14_wrap"
                        android:layout_alignParentTop="true"
                        android:text="我的图书馆" />


                </RelativeLayout>

                <ImageView
                    style="@style/home_icon_entry"
                    android:layout_marginRight="@dimen/default_margin" />
            </RelativeLayout>





            <RelativeLayout
                android:id="@+id/ac_my_rl_share"
                style="@style/setting_layout_padding">

                <ImageView
                    android:id="@+id/ac_my_textView431234"
                    android:layout_width="@dimen/default_icon_height"
                    android:layout_height="@dimen/default_icon_height"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/default_margin_large"
                    android:layout_marginRight="@dimen/default_margin_large"
                    android:src="@mipmap/mine_frag_share" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/ac_my_textView431337"
                    android:layout_toRightOf="@+id/ac_my_textView431234">


                    <TextView
                        android:textColor="@color/text_gray"
                        android:id="@+id/ac_my_tv_share"
                        style="@style/TextView_14_wrap"
                        android:layout_alignParentTop="true"
                        android:text="分享" />


                </RelativeLayout>

                <ImageView
                    android:id="@+id/ac_my_textView431337"
                    style="@style/home_icon_entry"
                    android:layout_marginLeft="@dimen/default_margin_large"
                    android:layout_marginRight="@dimen/default_margin" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/ac_my_rl_setting"
                style="@style/setting_layout_padding">

                <ImageView
                    android:id="@+id/ac_my_textView43123"
                    android:layout_width="@dimen/default_icon_height"
                    android:layout_height="@dimen/default_icon_height"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/default_margin_large"
                    android:layout_marginRight="@dimen/default_margin_large"
                    android:src="@mipmap/mine_frag_setting" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/ac_my_textView43133"
                    android:layout_toRightOf="@+id/ac_my_textView43123">


                    <TextView
                        android:textColor="@color/text_gray"
                        android:id="@+id/ac_my_tv_setting"
                        style="@style/TextView_14_wrap"
                        android:layout_alignParentTop="true"
                        android:text="设置" />


                </RelativeLayout>

                <ImageView
                    android:id="@+id/ac_my_textView43133"
                    style="@style/home_icon_entry"
                    android:layout_marginLeft="@dimen/default_margin_large"
                    android:layout_marginRight="@dimen/default_margin" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
