<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal"
      >

        <ImageView
            android:id="@+id/classification_e_book"
            style="@style/classification_RadioButton"
            android:src="@mipmap/e_book" />

        <ImageView
            android:id="@+id/classification_video"
            style="@style/classification_RadioButton"
            android:src="@mipmap/video" />

        <ImageView
            android:id="@+id/classification_audio"
            style="@style/classification_RadioButton"
            android:src="@mipmap/u_audio" />

        <ImageView
            android:id="@+id/classification_picture"
            style="@style/classification_RadioButton"
            android:src="@mipmap/picture" />
    </LinearLayout>
</LinearLayout>
