<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <com.taoxue.ui.view.TopBar
        android:id="@+id/topbar"
        style="@style/TopBar"
        app:title="登录" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/login_register_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size10dp"
                android:textColor="@drawable/selector_text_color_white_gray"
                android:textSize="@dimen/content_text"
                android:text="@string/zhuce"/>
        </RelativeLayout>
    </com.taoxue.ui.view.TopBar>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/login_name_Edt"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_classify_activity_qiaodao"
            android:singleLine="true"
            android:hint="手机号"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:textSize="@dimen/content_text" />

        <EditText
            android:id="@+id/login_PW_Edt"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="30dp"
            android:background="@drawable/shape_classify_activity_qiaodao"
            android:hint="密码"
            android:inputType="textPassword"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:textSize="@dimen/content_text" />


        <Button
            android:id="@+id/login_BTN"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/selector_default_button"
            android:text="登录"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/login_changepw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:text="忘记密码"
            android:textSize="@dimen/default_text_small" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:text="快速登录"
                android:textColor="@color/cc"
                android:textSize="@dimen/content_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/text"
                android:background="@color/help_button_view" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/text"
                android:background="@color/help_button_view" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/QQlogin_Btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/login_qq" />

        <ImageView
            android:id="@+id/Wxlogin_Btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/login_wx" />
    </LinearLayout>

</LinearLayout>